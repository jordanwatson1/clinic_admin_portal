<p style="color: green"><%= notice %></p>

<% content_for :title, "Appointments" %>

<h1>Appointments</h1>

<div id="appointments">
  <% @appointments.each do |appointment| %>
    <%= render appointment %>
    <p>
      <%= link_to "Show this appointment", patient_appointment_path(appointment.patient, appointment) %>
    </p>
  <% end %>
</div>

