<% content_for :title, "Editing Appointment" %>

<div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow space-y-6">
  <h1 class="text-2xl font-bold text-gray-800">Edit Appointment</h1>

  <%= render 'form', appointment: @appointment, patient: @patient %>

  <div class="pt-4 flex items-center space-x-4 text-sm">
    <%= link_to "View Appointment", patient_appointment_path(@patient, @appointment), class: "text-blue-700 underline" %>
    <%= link_to "Back to Patient", patient_path(@patient), class: "text-blue-700 underline" %>
  </div>
</div>
