<% content_for :title, "Appointment Details" %>

<% if notice %>
  <div class="mb-4 p-3 rounded-md bg-green-100 text-green-800 text-sm">
    <%= notice %>
  </div>
<% end %>

<div class="bg-white shadow-md rounded-lg p-6 mb-6">
  <h1 class="text-2xl font-semibold text-gray-800 mb-4">Appointment Details</h1>

  <div class="space-y-2 text-gray-700">
    <p><strong>Start Time:</strong> <%= @appointment.start_time.strftime("%B %d, %Y at %I:%M %p") %></p>
    <p><strong>End Time:</strong> <%= @appointment.end_time.strftime("%B %d, %Y at %I:%M %p") %></p>
    <p><strong>Notes:</strong></p>
    <p class="whitespace-pre-line"><%= @appointment.notes.presence || "None" %></p>
  </div>
</div>

<div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4 space-y-2 sm:space-y-0">
  <%= link_to "Edit Appointment", edit_patient_appointment_path(@appointment.patient, @appointment),
        class: "underline text-blue-600 text-sm font-medium hover:text-blue-800" %>

  <%= link_to "Back to Appointments", patient_appointments_path(@appointment.patient),
        class: "underline text-blue-600 text-sm font-medium hover:text-blue-800" %>

  <%= button_to "Delete", patient_appointment_path(@appointment.patient, @appointment),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this appointment?" },
        class: "text-sm text-red-600 hover:text-red-800 bg-white border border-red-600 px-3 py-1 rounded-md transition" %>
</div>
