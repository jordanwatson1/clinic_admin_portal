<%= form_with(model: patient, class: "space-y-6") do |form| %>
  <% if patient.errors.any? %>
    <div class="bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded-lg shadow-sm">
      <h2 class="font-semibold mb-2">
        <%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:
      </h2>
      <ul class="list-disc list-inside text-sm">
        <% patient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :first_name, class: "mt-1 block w-full rounded-md bg-gray-50 border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :last_name, class: "mt-1 block w-full rounded-md bg-gray-50 border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :dob, "Date of Birth", class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_field :dob, class: "mt-1 block w-full rounded-md bg-gray-50 border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= form.email_field :email, class: "mt-1 block w-full rounded-md bg-gray-50 border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :phone, class: "block text-sm font-medium text-gray-700" %>
    <%= form.telephone_field :phone, class: "mt-1 block w-full rounded-md bg-gray-50 border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="pt-4">
    <%= form.submit "Save Patient", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow transition" %>
  </div>
<% end %>
