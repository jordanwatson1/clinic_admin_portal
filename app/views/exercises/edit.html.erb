<% content_for :title, "Editing Exercise" %>

<div class="bg-white p-6 rounded-lg shadow-md max-w-2xl mx-auto">
  <h1 class="text-2xl font-semibold text-gray-800 mb-6">Edit Exercise</h1>

  <%= render "form", exercise: @exercise %>

  <div class="mt-6 flex flex-wrap gap-4 text-sm text-blue-600 font-medium">
    <%= link_to "Show this exercise", @exercise, class: "underline hover:text-blue-800" %>
    <%= link_to "Back to exercises", exercises_path, class: "underline hover:text-blue-800" %>
  </div>
</div>
