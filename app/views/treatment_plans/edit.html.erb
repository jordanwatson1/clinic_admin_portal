<% content_for :title, "Edit Treatment Plan" %>

<div class="max-w-3xl mx-auto mt-10 bg-white p-6 rounded-lg shadow-md space-y-6">
  <h1 class="text-2xl font-bold text-blue-700">Edit Treatment Plan</h1>

  <%= render "form", treatment_plan: @treatment_plan, patient: @patient %>

  <div class="mt-6 flex flex-wrap gap-4 items-center">
    <%= link_to "View Plan", patient_treatment_plan_path(@patient, @treatment_plan),
                class: "underline text-blue-600 text-sm font-medium hover:text-blue-800" %>
    <%= link_to "Back to Patient", patient_path(@patient),
                class: "underline text-blue-600 text-sm font-medium hover:text-blue-800" %>
  </div>
</div>
