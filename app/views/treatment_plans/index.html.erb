<% content_for :title, "Treatment plans" %>

<h1>Treatment plans</h1>

<div id="treatment_plans">
  <% @treatment_plans.each do |treatment_plan| %>
    <%= render treatment_plan %>
    <p>
      <%= link_to "Show this treatment plan", patient_treatment_plan_path(treatment_plan.patient, treatment_plan) %>
    </p>
  <% end %>
</div>

